{
    "variables": {
        "aws_vpc_id": "vpc-5e1c5626",
        "aws_subnet_id": "subnet-3acd7315"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "vpc_id": "{{user `aws_vpc_id`}}",
            "subnet_id": "{{user `aws_subnet_id`}}",
            "associate_public_ip_address": false,
            "region": "us-east-1",
            "source_ami_filter": {
                "filters": {
                    "virtualization-type": "hvm",
                    "name": "ubuntu/images/hvm-ssd/ubuntu-bionic-18.04-amd64-server-*",
                    "root-device-type": "ebs"
                },
                "owners": [
                    "099720109477"
                ],
                "most_recent": true
            },
            "instance_type": "t2.micro",
            "ssh_username": "ubuntu",
            "ami_name": "ami-packer",
            "tags": {
                "CreatedBy": "Joel Fogue",
                "Owner": "DevOps",
                "Environment": "QA"
            },
            "force_deregister": true
        }
    ],
    "_comment": "Running Ansible roles on the image",
    "provisioners": [
        {
            "type": "shell",
            "script": "../scripts/install-ansible.sh"
        },
        {
            "type": "ansible-local",
            "playbook_file": "../ansible/init.yml",
            "role_paths": [
                "../ansible/roles/awscli",
                "../ansible/roles/docker",
                "../ansible/roles/eksctl",
                "../ansible/roles/git",
                "../ansible/roles/iamauthenticator",
                "../ansible/roles/kubectl",
                "../ansible/roles/nginx-ui-app"
            ]
        }
    ],
    "post-processors": [
        [
            {
                "output": "manifest.json",
                "strip_path": true,
                "type": "manifest"
            }
        ]
    ]
}